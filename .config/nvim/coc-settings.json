{
  "suggest.enablePreselect": true,
	"suggest.noselect": true,
  "diagnostic.displayByAle": true,
  "languageserver": {
    "purescript": {
      // "command": "node_modules/.bin/purescript-language-server",
      // "command": "/nix/store/hi13g9r99ddcsrqzisr3ykaxj9kb48vf-purescript-language-server-0.18.5/bin/purescript-language-server",
      "command": "purescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["purescript"],
      "trace.server": false,
      "rootPatterns": ["bower.json", "psc-package.json", "spago.dhall"],
      "settings": {
        "purescript": {
          "addSpagoSources": true,
          //"addNpmPath": true, // won't work with 'false' with the locally installed server
          "formatter": "purs-tidy"
        }
      }
    },
    "nix": {
      "command": "nil",
      "filetypes": ["nix"],
      "rootPatterns":  ["flake.nix"],
      // Uncomment these to tweak settings.
      // "settings": {
      //   "nil": {
      //     "formatting": { "command": ["nixfmt"] }
      //   }
      // }
    }
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "purescript"
  ]
}
